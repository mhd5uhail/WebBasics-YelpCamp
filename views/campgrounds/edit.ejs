<% layout('layouts/boilerplate') %> 
<form id="editcampground" action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST">
    <div>
        <label for="title">Enter title</label>
        <input type="text" id="title" value="<%=campground.title%> " name="campground[title]">
    </div>
    <div>
        <label for="desc">Enter Description</label>
        <input type="text" id="desc" value="<%= campground.description %> " name="campground[description]">
    </div>
    <div>
        <label for="location">Enter location</label>
        <input type="text" id="location" value="<%= campground.location %> " name="campground[location]">
    </div>
    <div>
        <button>Update Campground</button>
    </div>
</form>
<a href="/campgrounds/<%=campground._id%>">Back to Campground</a>